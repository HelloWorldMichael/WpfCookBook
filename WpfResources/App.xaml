<Application x:Class="WpfResources.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<!--The Source property would have to be based on the pack URI syntax. Suppose that Brushes.xaml was placed in 
			a class library within a Resourcesfolder. The main application could merge it into another 
			ResourceDictionary as follows:
			<ResourceDictionary Source="/MyClassLibrary;component/Resources/Brushes.xaml" />-->
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Brushes.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
		
	</Application.Resources>
</Application>
